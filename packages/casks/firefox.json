{
  "pname": "firefox",
  "version": "130.0.1",
  "artifacts": [
    { "type": "preflight", "value": null },
    { "type": "uninstall", "value": [{ "type": "quit", "value": ["org.mozilla.firefox"] }] },
    { "type": "app", "value": { "name": "Firefox.app" } },
    {
      "type": "binary",
      "value": {
        "name": "$HOMEBREW_PREFIX/Caskroom/firefox/130.0.1/firefox.wrapper.sh",
        "target": "firefox"
      }
    },
    {
      "type": "zap",
      "value": [
        {
          "type": "rmdir",
          "value": [
            "~/Library/Application Support/Mozilla",
            "~/Library/Caches/Mozilla",
            "~/Library/Caches/Mozilla/updates",
            "~/Library/Caches/Mozilla/updates/Applications"
          ]
        }
      ]
    }
  ],
  "src": {
    "url": "https://download-installer.cdn.mozilla.net/pub/firefox/releases/130.0.1/mac/en-US/Firefox%20130.0.1.dmg",
    "sha256": "63ed878485d5498c269d95ba7e64f1104ed085b8e330b0ef0a565f85cc603426"
  },
  "installPhase": [
    "mkdir -p \"$out/Applications\" && cp -r \"Firefox.app\" \"$out/Applications/Firefox.app\"",
    "mkdir -p \"$out/bin\" && ln -s \"$out/firefox.wrapper.sh\" \"$out/bin/firefox\""
  ],
  "meta": { "description": "Web browser", "homepage": "https://www.mozilla.org/firefox/" }
}
