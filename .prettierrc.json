{
  "semi": true,
  "tabWidth": 2,
  "printWidth": 100,
  "arrowParens": "avoid",
  "trailingComma": "all",
  "organizeImportsSkipDestructiveCodeActions": true,
  "overrides": [
    {
      "files": "*.astro",
      "options": {
        "parser": "astro"
      }
    }
  ],
  "plugins": [
    "prettier-plugin-organize-imports",
    "prettier-plugin-tailwindcss",
    "prettier-plugin-astro"
  ]
}
