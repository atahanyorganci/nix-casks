{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": ["flake.nix", "flake.lock"],
	"tasks": {
		"build": {
			"dependsOn": ["check", "lint"],
			"inputs": ["tsconfig.json", "astro.config.mjs", "tailwind.config.mjs", "src/**/*"],
			"outputs": ["dist/**"],
			"env": [
				"NODE_ENV",
				"POSTGRES_URL",
				"AWS_ACCESS_KEY_ID",
				"AWS_SECRET_ACCESS_KEY",
				"AWS_ENDPOINT_URL_S3",
				"AWS_REGION",
				"AWS_BUCKET_NAME"
			]
		},
		"lint": {},
		"deploy": {
			"cache": false,
			"dependsOn": ["build"]
		},
		"dev": {
			"cache": false,
			"persistent": true
		},
		"preview": {
			"cache": false,
			"persistent": true,
			"dependsOn": ["build"]
		}
	}
}
